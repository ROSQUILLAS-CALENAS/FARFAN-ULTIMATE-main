  "correction_factors": {
    "deviation_severity_thresholds": {
      "severe_deviation": 0.3,
      "moderate_deviation": 0.5,
      "minor_deviation": 0.7,
      "acceptable_range": 0.8
    },
    "causal_distance_calculations": {
      "method": "euclidean_weighted",
      "robustness_weight": 0.2,
      "validity_correction_min": 0.5,
      "distance_penalty_exp": true,
      "deviation_correction_min": 0.3
    },
    "correction_factor_bounds": {
      "minimum": 0.1,
      "maximum": 2.0
    },
    "evidence_reference_tracking": {
      "required_evidence_types": [
        "documentary",
        "testimonial",
        "statistical",
        "observational"
      ],
      "evidence_quality_weights": {
        "high_quality": 1.0,
        "medium_quality": 0.7,
        "low_quality": 0.3
      },
      "minimum_evidence_per_point": 2,
      "reference_quality_factors": {
        "page_specificity": 0.3,
        "context_relevance": 0.4,
        "source_credibility": 0.3
      }
    }
  },
  "validation_schema": {
    "precision_decimals": 4,
    "rounding_method": "ROUND_HALF_UP",
    "expected_questions_per_point": 47,
    "validation_rules": {
      "score_range": [0.0, 1.0],
      "weight_sum_tolerance": 0.001,
      "evidence_completeness_range": [0.0, 1.0],
      "page_reference_quality_range": [0.0, 1.0]
    }
  },
  "artifact_serialization": {
    "output_formats": ["json", "csv", "xml"],
    "compression": "gzip",
    "include_metadata": true,
    "include_timestamps": true,
    "schema_validation_on_write": true,
    "artifact_fields": {
      "causal_distance": {
        "type": "float",
        "precision": 6,
        "required": true
      },
      "correction_factor": {
        "type": "float",
        "precision": 4,
        "required": true
      },
      "evidence_references": {
        "type": "array",
        "items": {
          "page_number": "integer",
          "context_excerpt": "string",
          "quality_score": "float",
          "reference_type": "string"
        },
        "required": true
      },
      "dnp_deviation_scores": {
        "type": "object",
        "properties": {
          "dimensional_deviations": "object",
          "decalogo_deviations": "object"
        },
        "required": true
      }
    }
