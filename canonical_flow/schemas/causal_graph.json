{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/causal_graph.json",
  "title": "Causal Graph Schema",
  "description": "Schema for causal graphs generated by the K_knowledge_extraction stage",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "description": "Array of nodes in the causal graph",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the node"
          },
          "label": {
            "type": "string",
            "description": "Human-readable label for the node"
          },
          "type": {
            "type": "string",
            "enum": ["cause", "effect", "mediator", "confounder"]
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          },
          "attributes": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "required": ["id", "label", "type"]
      }
    },
    "edges": {
      "type": "array",
      "description": "Array of edges in the causal graph",
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "description": "ID of the source node"
          },
          "target": {
            "type": "string",
            "description": "ID of the target node"
          },
          "relationship": {
            "type": "string",
            "enum": ["causes", "prevents", "enables", "correlates"]
          },
          "strength": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["source", "target", "relationship"]
      }
    },
    "metadata": {
      "type": "object",
      "description": "Metadata about the causal graph",
      "properties": {
        "algorithm": {
          "type": "string",
          "description": "Algorithm used to generate the graph"
        },
        "data_sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "creation_date": {
          "type": "string",
          "format": "date-time"
        },
        "validation_score": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    },
    "version": {
      "type": "string",
      "description": "Version of the causal graph schema",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  },
  "required": ["nodes", "edges", "metadata", "version"],
  "additionalProperties": false
}