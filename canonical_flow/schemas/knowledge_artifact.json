{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/knowledge_artifact.json",
  "title": "Knowledge Artifact Schema",
  "description": "Schema for knowledge artifacts generated by the K_knowledge_extraction stage",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the knowledge artifact",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "content": {
      "type": "string",
      "description": "The actual content/text of the knowledge artifact",
      "minLength": 1
    },
    "metadata": {
      "type": "object",
      "description": "Metadata associated with the knowledge artifact",
      "properties": {
        "source": {
          "type": "string",
          "description": "Source document or system that generated this artifact"
        },
        "extraction_method": {
          "type": "string",
          "enum": ["manual", "automated", "hybrid"]
        },
        "confidence_score": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
        }
      },
      "required": ["source"]
    },
    "embeddings": {
      "type": "object",
      "description": "Embedding vectors for the knowledge artifact",
      "properties": {
        "vector": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 1
        },
        "model": {
          "type": "string",
          "description": "Name of the embedding model used"
        },
        "dimension": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": ["vector", "model", "dimension"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the artifact was created"
    }
  },
  "required": ["id", "content", "metadata", "embeddings", "timestamp"],
  "additionalProperties": false
}